<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bitmerce.bitmerceandroid.ui.widget.CreateGigPost">

    <LinearLayout
        android:layout_marginTop="@dimen/pad_20dp"
        android:isScrollContainer="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="5dp">
            <TextView
                android:paddingLeft="10dp"
                android:paddingTop="@dimen/pad_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_20sp"
                android:text="Gig:"/>
            <EditText
                android:id="@+id/gig_post_title"
                android:paddingTop="@dimen/pad_10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_20sp"
                android:hint=" I need..."/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:textSize="@dimen/txt_15sp">
            <TextView
                android:paddingLeft="10dp"
                android:paddingTop="@dimen/pad_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_20sp"
                android:text="Type:"/>
            <Spinner
                android:id="@+id/gig_types"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="right|top">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_action_mic"
                android:layout_gravity="left|center_vertical" />
            <EditText
                android:id="@+id/gig_post_description"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:hint="What do you need help with?"
                android:layout_gravity="left|top"
                android:maxLength="140"
                android:textSize="@dimen/txt_20sp"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gig_post_price"
                android:text="0.00"
                android:inputType="numberDecimal"
                android:layout_gravity="end"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/locate_me"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_location_found"
                android:layout_gravity="left|top" />
            <TextView
                android:paddingLeft="@dimen/pad_15dp"
                android:id="@+id/my_location"
                android:paddingTop="@dimen/pad_10dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/txt_15sp"
                android:gravity="center_vertical"
                android:text="Miami, FL"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_send_request"
            style="@style/btn"
            android:layout_width="446dp"
            android:layout_height="wrap_content"
            android:text="SEND"
            android:textColor="@color/white"
            android:background="@drawable/btn_yay" />
    </LinearLayout>



</FrameLayout>
